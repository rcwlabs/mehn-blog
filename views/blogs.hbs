<h1>Welcome to the blog</h1>
{{message}}
<div class="blog-section">
    {{#each posts}}
        <div class="blog-post">
            <a href="/blog/{{this.id}}">
            <h3 class="post-title">{{title}}</h3>
            <p>{{author}}</p>
            <p>{{content}}</p>
            </a>
        </div>
    {{/each}}
</div>